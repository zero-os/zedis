# http://editorconfig.org

# top-most EditorConfig file
root = true

[*]
indent_style = space
indent_size = 4
end_of_line = lf
insert_final_newline = true
charset = utf-8

[*.go]
indent_style = tab
indent_size = 4

[*.{yml, raml}]
indent_style = space
indent_size = 2

[*.json]
insert_final_newline = false

[{package.json}]
indent_size = 2
